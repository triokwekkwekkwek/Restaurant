<html>

<head>
    <meta charset="UTF-8" />
    <title>Add Review</title>
    <link rel="stylesheet" href="review-page.css">
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
</head>

<body>
    <h2>Total Pemesanan yang dibayar per-Hari</h2>
    <div class="review">
        <form action="/review-total" id="review-total-card">
            <p>
                <b>Total Dibayar</b> </p>
            <p>
                <%= tanggal %>
            </p>
            <p>
                <%= paid_count %>
            </p>
        </form>
    </div>
    <br>
    <h2>Total Review yang diberikan per-Hari</h2>
    <div class="review">
        <form action="/review-total" id="review-total-card">
            <p><b> Total Review </b></p>
            <p>
                <%= tanggal %>
            </p>
            <p>
                <%= review_count %>
            </p>
        </form>
    </div>
    <br>
    <h2>Total Penjualan yang dilakukan per-Hari</h2>
    <div class="penjualan">
        <ul class="penjualan_result">
            <% for(var i = 0; i < penjualan.length; i++) {%>
                <li class="menu">
                    <span><%= penjualan[i]._id %></span> <br>
                    <span>Total: </span><span><%= penjualan[i].jumlah %></span>
                    <br><br>
                </li>
                <% } %>
        </ul>
    </div>
</body>

</html>